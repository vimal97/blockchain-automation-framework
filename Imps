-----------------------------------------------------------
STEPS TO REPRODUCE
-----------------------------------------------------------

minikube stop && minikube delete
sudo minikube start --vm-driver=none --kubernetes-version=1.16.0
sudo mv /home/vimal974ever/.kube /home/vimal974ever/.minikube $HOME
sudo chown -R $USER $HOME/.kube $HOME/.minikube
cp ~/.minikube/profiles/minikube/client.crt build/
cp ~/.minikube/profiles/minikube/client.key build/
cp ~/.minikube/ca.crt build/
cp ~/.minikube/ca.key build/
cp ~/.kube/config build/
rm -rf data
vault server -config=config.hcl

export VAULT_ADDR=http://localhost:8200
vault operator init -key-shares=1 -key-threshold=1
vault operator unseal pTPmc2O9+2b7hcLf4tv0+03/7nTfuNpFV8faLvBch2E=
vault login s.Ggv3rrNKugCu2PPICKqgiOVE
vault secrets enable -version=1 -path=secret kv
//helm init
docker build . -t hyperledgerlabs/baf-build
docker run -it -v $(pwd):/home/vimal974ever/Desktop/Blockchain/blockchain-automation-framework/ hyperledgerlabs/baf-build

